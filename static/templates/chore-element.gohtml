{{- /*gotype: github.com/SimonSchneider/chore-tracker/chore.Chore*/ -}}
<div class="chore-container" id="chore-{{.ID}}">
    <div class="group">
        <button class="icon-button" hx-post="/chores/{{.ID}}/complete"
                hx-target="body"
                hx-swap="outerHTML">
            <img src="/static/public/icons/check.svg" alt="complete">
        </button>
        {{ if gt .DurationToNext 0 }}
            <button class="icon-button" hx-post="/chores/{{.ID}}/expedite"
                    hx-target="body"
                    hx-swap="outerHTML">
                <img src="/static/public/icons/arrow-up.svg" alt="delete">
            </button>
        {{ else }}
            <button class="icon-button" hx-post="/chores/{{.ID}}/snooze"
                    hx-target="body"
                    hx-swap="outerHTML">
                <img src="/static/public/icons/zzz.svg" alt="delete">
            </button>
        {{ end }}
    </div>
    <p class="name">
        {{.Name}}
    </p>
    <p class="secondary-text">
        {{.DurationToNext }}
    </p>

    <div class="group">
        <button class="icon-button" hx-get="/chores/{{.ID}}/edit" hx-target="body" hx-swap="beforeend">
            <img src="/static/public/icons/pencil.svg" alt="edit"/>
        </button>
    </div>
</div>